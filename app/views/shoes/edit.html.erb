<h1> Edit your shoe: </h1>

<%= simple_form_for(@shoe) do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :size %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :year %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Save" %>
<% end %>

<%= link_to "Back to all shoes", shoes_path %>
