
<div class="container">
<h1> Your new shoe: </h1>

<%= simple_form_for(@shoe) do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :size %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :year %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Create" %>
<% end %>
</div>
